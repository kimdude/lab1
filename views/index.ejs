<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css">
    <title>Kurser</title>
    <script src="/js/main.js" defer></script>
</head>
<!-- Body-->
<body>
    <!-- Header -->
    <header>
        <!-- Navigation -->
        <nav>
            <!-- Nav-buttons -->
            <button id="openBtn" class="menuBtn">
                <span class="line"></span>
                <span class="line"></span>
                <span class="line"></span>
            </button>
            <ul id="mainMenu">
                <button id="closeBtn" class="menuBtn">
                    <span class="line" id="line1"></span>
                    <span class="line" id="line2"></span>
                </button>
                <!-- Navoptions -->
                <a href="/" class="openPage"><li>Startsida</li></a>
                <a href="/about"><li>Om webbplatsen</li></a>
                <a href="/addCourse"><li>Lägg till kurser</li></a>
            </ul>
        </nav>
    </header>
    <!-- Main -->
    <main id="tableMain">
        <!-- Section with table of courses -->
        <section id="tableSection">
            <h1>Kurser</h1>
            <% if(locals.rows && locals.rows.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <td>Kurs</td>
                            <td>Kurskod</td>
                            <td>Progression</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% locals.rows.forEach((row) => { %>
                            <tr>
                                <td>
                                    <a href= <%= row.syllabus %> >
                                        <%= row.coursename %>
                                    </a>
                                </td>
                                <td>
                                    <a href= <%= row.syllabus %> >
                                        <%= row.coursecode %>
                                    </a>
                                </td>
                                <td>
                                    <a href= <%= row.syllabus %> >
                                        <%= row.progression %>
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                    <!-- Tfoot with button to add courses -->
                    <tfoot>
                        <tr>
                            <td colspan="3">
                                <a href="/addCourse">
                                    Lägg till kurs »
                                </a>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            <% } %>
        </section>
    </main>
    <!-- Footer -->
    <footer>
        <p><strong>Backend-baserad webbutveckling, DT207G</strong></p>
        <p>Kim Dudenhöfer</p>
        <p><time datetime="2025-03-29">2025-03-29</time></p>
    </footer>
</body>
</html>